.mechat-create-post
    width: calc(100% - 310px)
    height: 100%
    position: relative

    .mechat-cp-title
        width: 100%
        text-align: center
        font-weight: normal
        margin: 0px
        height: 40px
        line-height: 40px
        font-size: 16px

    .mechat-cp-container
        width: 100%
        position: relative

        .mechat-cp-textarea
            width: 100%
            border: 0px
            height: 300px
            resize: none
            outline: 0
            padding: 20px
            font-size: 16px

        .mechat-cp-send
            width: 100px
            margin: 20px auto
            display: block
            background: rgb(26, 173, 25)
            border: 0px
            padding: 6px
            color: #fff
            transition: .3s all
            cursor: pointer
            outline: 0
            &:hover
                background: lighten(rgb(26, 173, 25), 10%)            