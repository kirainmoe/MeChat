.mechat-group-chat
    display: flex
.mechat-group-container
    width: 70%
    height: 100%
.mechat-group-members
    width: 30%
    height: 100%
    overflow-x: hidden
    overflow-y: auto
    border-left: 1px solid #eee
    .mechat-group-members-list
        width: 100%
        .mechat-chat-title
            width: 100%
        .mechat-group-members-item
            width: 100%
            font-size: 12px
            height: 30px
            line-height: 30px
            display: flex
            margin: 10px 8px
            img
                width: 30px
                height: 30px
                border-radius: 50%
                margin-right: 3px
