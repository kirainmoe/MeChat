.mechat-chat-page
    width: calc(100% - 310px)
    height: 100%

    .mechat-chat-title
        width: 100%
        height: 40px
        line-height: 40px
        padding: 0px 10px
        border-bottom: 1px solid #eee
    
    .mechat-chat-content
        width: 100%
        height: calc(75% - 40px)
        padding: 20px
        overflow-x: hidden
        overflow-y: auto

        .mechat-chat-item
            width: 80%
            display: flex
            margin: 10px 0px

            .mechat-chat-item-avatar
                display: inline-block
                margin: 0px 5px
                img
                    width: 30px
                    height: 30px
                    border-radius: 50%
            .mechat-chat-item-blob
                background: #eee
                font-size: 14px
                padding: 5px
            
            &.from-me
                margin-left: auto
                justify-content: flex-end
            &.from-me .mechat-chat-item-avatar
                order: 2
            &.from-me .mechat-chat-item-blob
                order: 1

    .mechat-chat-textarea
        width: 100%
        height: 25%
        border-top: 1px solid #eee

        textarea
            width: 100%
            height: 75%
            outline: 0
            border: 0px
            padding: 10px 
            font-size: 14px
            resize: none;
            font-family: 'Pingfang SC', 'Microsoft YaHei'
        .mechat-chat-send
            width: 80px
            float: right
            background: rgb(245, 245, 245)
            margin: 4px
            border: 1px solid #eee
            transition: .3s background linear

            &:hover
                color: #fff
                background: rgb(18, 150, 17)