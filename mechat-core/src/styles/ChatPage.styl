.mechat-chat-page
    width: calc(100% - 310px)
    height: 100%

    .mechat-chat-title
        width: 100%
        height: 40px
        line-height: 40px
        padding: 0px 10px
        border-bottom: 1px solid #eee
        a
            color: #000
            text-decoration: none
    
    .mechat-chat-content
        width: 100%
        height: calc(75% - 40px)
        padding: 20px
        overflow-x: hidden
        overflow-y: auto

        .mechat-chat-item-time
            width: 50px
            margin: 0 auto
            text-align: center
            font-size: 12px
            background: lighten(#eee, 50%)
            border-radius: 10px

        .mechat-chat-item
            width: 80%
            display: flex
            margin: 10px 0px
            flex-wrap: no-wrap
            position: relative

            .mechat-chat-group-id
                width: 100%
                position: absolute
                top: 0px 
                left: 40px
                margin: 0px;
                text-align: left
                font-size: 10px

            .mechat-chat-item-avatar
                display: inline-block
                margin: 0px 5px
                img
                    width: 30px
                    height: 30px
                    border-radius: 50%
            .mechat-chat-item-bubble
                background: #eee
                font-size: 14px
                padding: 8px
                img
                    width: auto
                    height: auto
                    max-width: 300px
                    max-height: 300px
                p
                    margin: 0px
            
            &.from-me
                margin-left: auto
                justify-content: flex-end
                .mechat-chat-group-id
                    left: -40px
                    text-align: right
            &.from-me .mechat-chat-item-avatar
                order: 2
            &.from-me .mechat-chat-item-blob
                order: 1

    .mechat-chat-textarea
        width: 100%
        height: 25%
        border-top: 1px solid #eee
        input[type="file"]
            display: none
        textarea
            width: 100%
            height: 75%
            outline: 0
            border: 0px
            padding: 10px 
            font-size: 14px
            resize: none;
            font-family: 'Pingfang SC', 'Microsoft YaHei'
        .mechat-chat-image
            background: transparent
            border: 0px
            outline: 0
            cursor: pointer
            margin: 8px 10px
.mechat-chat-send
    width: 80px
    float: right
    background: rgb(245, 245, 245)
    margin: 4px
    border: 1px solid #eee
    transition: .3s background linear

    &:hover
        color: #fff
        background: rgb(18, 150, 17)

.mechat-group-chat
    .mechat-chat-item-bubble
        margin-top: 20px