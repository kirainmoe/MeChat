.mechat-loginpage
    width: 100%
    margin-top: 20px
    text-align: center
    position: absolute
    top: 0px

.mechat-login-personinfo
    margin-top: 40px
    transition: .5s all ease-in-out

.mechat-login-avatar
    width: 100px
    height: 100px
    border-radius: 50%
    margin: 0px auto
    transition: .1s background ease-in-out

.mechat-login-nickname
    font-size: 14px
    color: #888

.mechat-loginpage input
    width: 80%
    font-size: 14px
    padding: 8px 0px
    margin: 5px 0px
    outline: 0
    border: 0px
    border-bottom: 1px solid #888

.mechat-login-hint
    text-align: center
    margin: 50px 0px

.mechat-login-actions
    margin-top: 20px

    .mechat-login-button
        background: #eee
        border: 0px
        padding: 10px 20px
        outline: 0
        transition: .3s all linear

        &:hover
            background: darken(#eee, 10%)

.mechat-login-register
    display: block
    color: #888
    font-size: 12px
    margin-top: 20px

.mechat-login-copyright
    width: 100%
    position: fixed
    bottom: 10px
    font-size: 9px
    text-align: center
    color: #ccc